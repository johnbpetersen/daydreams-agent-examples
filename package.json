{
  "name": "daydreams",
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "goal": "bun run examples/example-goal.ts",
    "task": "bun run examples/example-basic.ts",
    "twitter": "bun run examples/v1/example-twitter.ts",
    "server": "bun run examples/example-server.ts",
    "discord": "bun run examples/v1/example-discord.ts",
    "telegram": "bun run examples/v1/example-telegram.ts",
    "vector": "bun run examples/v1/example-vector.ts",
    "hyperliquid": "bun run examples/example-hyperliquid.ts",
    "vision": "bun run examples/example-vision.ts",
    "new": "bun run examples/example-new.ts",
    "api": "bun run examples/example-api.ts",
    "ui": "bun --dir clients/example-ui run dev",
    "test": "bun run packages/core",
    "build:core": "cd packages/core && bun run build",
    "release": "cd packages/core && bun run build && cd ../.. && npx lerna publish --no-private --force-publish",
    "prettier-check": "pnpx prettier --check packages",
    "prettier": "pnpx prettier --write packages",
    "knip": "knip",
    "docs:dev": "cd docs && bun run dev",
    "docs:build": "cd docs && bun run build",
    "docs:start": "cd docs && bun run start"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.1.6",
    "@ai-sdk/groq": "^1.1.11",
    "@daydreamsai/core": "^0.2.5",
    "@mendable/firecrawl-js": "^1.16.0",
    "@openrouter/ai-sdk-provider": "^0.2.1",
    "@tailwindcss/postcss": "^4.0.6",
    "@tavily/core": "^0.3.1",
    "ai": "^4.1.25",
    "ajv": "^8.17.1",
    "chalk": "^5.4.1",
    "chromadb": "^1.5.5",
    "cors": "^2.8.5",
    "discord.js": "^14.17.3",
    "elevenlabs": "^1.52.0",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "groq-sdk": "^0.15.0",
    "hyperliquid": "^1.5.8",
    "lerna": "^8.1.9",
    "mongodb": "^6.13.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "readline": "^1.3.0",
    "tailwindcss": "^4.0.6",
    "telegraf": "^4.16.3",
    "telegram": "^2.26.16",
    "ws": "^8.18.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.2",
    "@types/react": "19.0.9",
    "knip": "^5.43.6",
    "typedoc": "^0.27.6",
    "typedoc-plugin-frontmatter": "^1.1.2",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "~5.7.3"
  }
}
